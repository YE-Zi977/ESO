.main {
  width: 100%;
}
.main .g-swiper {
  width: 100%;
  height: calc(100vh - 50px);
}
.main.default {
  background-color: #f5f5f5;
}
.main.default .to-release {
  position: relative;
  padding: 60px 10px 95px;
  -webkit-border-radius: 10px 10px 0 0;
          border-radius: 10px 10px 0 0;
  background-color: #ffffff;
  overflow: hidden;
}
.main.default .to-release .item {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin: 0 35px;
  font-size: 12px;
  color: #333333;
}
.main.default .to-release .item .wz,
.main.default .to-release .item .tz {
  width: 60px;
  height: 60px;
  margin-bottom: 12px;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.main.default .to-release .item .wz .icon,
.main.default .to-release .item .tz .icon {
  font-size: 24px;
  color: #ffffff;
}
.main.default .to-release .item .wz {
  background-color: #6978ed;
  -webkit-box-shadow: 0 0 8px 2px rgba(107, 120, 241, 0.35);
          box-shadow: 0 0 8px 2px rgba(107, 120, 241, 0.35);
}
.main.default .to-release .item .tz {
  background-color: #fdb255;
  -webkit-box-shadow: 0 0 8px 2px rgba(253, 178, 85, 0.35);
          box-shadow: 0 0 8px 2px rgba(253, 178, 85, 0.35);
}
.main.default .to-release .close {
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  bottom: 30px;
  padding: 8px;
  font-size: 16px;
  font-weight: 600;
  color: #999999;
}
.main.default .user-talk {
  min-height: 35vh;
  max-height: 75vh;
  -webkit-border-radius: 10px 10px 0 0;
          border-radius: 10px 10px 0 0;
  background-color: #ffffff;
  overflow: hidden;
}
.main.default .user-home,
.main.default .my-home {
  width: 100vw;
  height: 100%;
  background-color: #ffffff;
}
